<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.CardView"
    android:padding="5sp">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="10sp"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:minHeight="150sp"
        app:cardCornerRadius="5sp"
        app:cardElevation="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="getProjectDetail">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5sp">
            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Program"
                android:textColor="#9932CC"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="6dp" />
            <TextView
                android:id="@+id/project_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bshjew whhdvw wu udwy udy dvuyvd u dwy nsbjas jqvxhqw qwdu qwdqw jqvwd qwvd jqhvwdkhv"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/project_name"
                app:layout_constraintVertical_bias="0.291" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>